
@model Product

@{ 
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">

    <div class="thumbnail">
        <div class="card p-3">
            <h2>@Model.ProductName Details</h2>
            
            <div class="caption-full">
                <div class="row">
                    <div class="col-md-6">
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" style="width:100%; margin:20px" />
                    </div>
                    <br />
                    <div class="col-md-6">
                        <h3 style="color:red">
                            @Model.ProductName
                        </h3>
                        <br />
                        <h3>Promo Price: @Model.Price.ToString("c")</h3>
                        <br />

                        <h4>@Model.ShortDescription</h4>
                    </div>
                </div>
                <div class="jumbotron m-3">

                    <p class="text-lg-center">@Model.LongDescription</p>
                    <p class="text-lg-center">@Model.LongDescription</p>

                    <div class="addToCart">
                        <p class="button">
                            <a class="btn btn-primary"
                               asp-controller="ShoppingCart"
                               asp-action="AddToShoppingCart"
                               asp-route-id="@Model.ProductId">Add to cart</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>