@model AbimMall.Models.Contact

@{
    ViewData["Title"] = "CreateContact";
}

<h1>Create Contact</h1>


<div class="container">
    <h1>Contact Us</h1>
    <p>If you have any question, please do not hesitate to contact us. We will be glad to receive your feedback</p>
    <form method="post" asp-action="CreateContact">
        <div class=" border p-3">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Email"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Message"></label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Message" class="form-control" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Submit" />
                            </div>
                            <div class="col">
                                <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100">Back To Home</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>

    </form>
</div>
